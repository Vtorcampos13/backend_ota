extends ../layout

block content 
    h1 Editar Propietario
    if error 
        h2= error
    form(action=`/propietarios/${propietario.id}`, method="post")
        label(for="nombre") nombre
        input(type="text", name="nombre", id="nombre" value=propietario.nombre)  
        label(for="apellido") apellido
        input(type="text", name="apellido", id="apellido", value=propietario.apellido ) 
        label(for="email") email
        input(type="text", name="email", id="email", value=propietario.email ) 
        input(type="submit", value="guardar")